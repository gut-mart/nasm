{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurar (GDB)",
            "type": "cppdbg",
            "request": "launch",
            // CAMBIO IMPORTANTE: 
            // Usa ${workspaceFolder} para buscar siempre en la carpeta 'build' de la raíz.
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar impresión bonita para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Forzar arquitectura x86_64",
                    "text": "set architecture i386:x86-64",
                    "ignoreFailures": true
                }
            ],
            // Ejecuta la tarea de compilación antes de lanzar el depurador
            "preLaunchTask": "Construir Proyecto Actual"
        }
    ]
}